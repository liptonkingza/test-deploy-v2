  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentTableName = '';
    let currentTableLabel = '';

    // Export function
    function exportTable(tableName, tableLabel) {
      const url = `/data-import-export/export/${tableName}`;
      const link = document.createElement('a');
      link.href = url;
      link.download = `${tableName}_${new Date().toISOString().split('T')[0]}.csv`;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      // Show success message
      showAlert('success', `‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≤‡∏Å‡∏ï‡∏≤‡∏£‡∏≤‡∏á "${tableLabel}"`);
    }

    // Open import modal
    function openImportModal(tableName, tableLabel) {
      currentTableName = tableName;
      currentTableLabel = tableLabel;
      document.getElementById('importTableName').textContent = tableLabel;
      document.getElementById('importTableNameInput').value = tableName;
      document.getElementById('csvFileInput').value = '';
      document.getElementById('fileName').textContent = '';
      document.getElementById('importProgress').classList.add('d-none');
      
      const modal = new bootstrap.Modal(document.getElementById('importModal'));
      modal.show();
    }

    // File input handling
    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('csvFileInput');
    const fileName = document.getElementById('fileName');

    uploadArea.addEventListener('click', () => fileInput.click());

    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      const files = e.dataTransfer.files;
      if (files.length > 0 && files[0].name.endsWith('.csv')) {
        fileInput.files = files;
        fileName.textContent = `üìÑ ${files[0].name} (${(files[0].size / 1024).toFixed(2)} KB)`;
      } else {
        showAlert('danger', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå CSV ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô');
      }
    });

    fileInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        fileName.textContent = `üìÑ ${file.name} (${(file.size / 1024).toFixed(2)} KB)`;
      }
    });

    // Submit import
    function submitImport() {
      const fileInput = document.getElementById('csvFileInput');
      
      if (!fileInput.files[0]) {
        showAlert('danger', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå CSV');
        return;
      }

      // Create FormData manually to avoid unexpected fields
      const formData = new FormData();
      formData.append('csvFile', fileInput.files[0]);
      formData.append('mode', document.querySelector('input[name="mode"]:checked').value);

      const progressDiv = document.getElementById('importProgress');
      progressDiv.classList.remove('d-none');

      fetch(`/data-import-export/import/${currentTableName}`, {
        method: 'POST',
        body: formData
      })
      .then(async response => {
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          const text = await response.text();
          throw new Error(`Server error: ${response.status} ${response.statusText}. ${text.substring(0, 200)}`);
        }
        return response.json();
      })
      .then(data => {
        progressDiv.classList.add('d-none');
        
        if (data.success) {
          let message = `‡∏ô‡∏≥‡πÄ‡∏Ç‡πâ‡∏≤‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ${data.inserted} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏à‡∏≤‡∏Å ${data.total} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£`;
          
          if (data.skipped > 0) {
            message += ` (‡∏Ç‡πâ‡∏≤‡∏° ${data.skipped} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ã‡πâ‡∏≥)`;
          }
          
          if (data.errors && data.errors.length > 0) {
            message += ` (‡∏°‡∏µ ${data.errorCount} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î - ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î‡πÉ‡∏ô Console)`;
            
            // Store errors globally for later access
            window.lastImportErrors = data.errors;
            window.lastErrorSummary = data.errorSummary;
            window.lastImportResult = {
              inserted: data.inserted,
              skipped: data.skipped,
              total: data.total,
              errorCount: data.errorCount,
              timestamp: new Date().toISOString(),
              tableName: currentTableName
            };
            
            // Store in localStorage for persistence
            try {
              localStorage.setItem('lastImportErrors', JSON.stringify(data.errors));
              localStorage.setItem('lastErrorSummary', JSON.stringify(data.errorSummary));
              localStorage.setItem('lastImportResult', JSON.stringify(window.lastImportResult));
            } catch (e) {
              console.warn('Cannot save to localStorage:', e);
            }
            
            // Use console.error to prevent auto-clear and make it more visible
            console.error('üö® ===== IMPORT ERRORS DETAILS =====');
            console.error(`üìä Import Summary:`, {
              'Total Records': data.total,
              'Successfully Inserted': data.inserted,
              'Skipped (Duplicates)': data.skipped,
              'Errors': data.errorCount,
              'Success Rate': `${((data.inserted / data.total) * 100).toFixed(1)}%`,
              'Timestamp': new Date().toLocaleString('th-TH')
            });
            
            if (data.errorSummary) {
              console.error('üìà Error Summary:', {
                'Duplicate Keys': data.errorSummary.duplicateKeys,
                'Constraint Violations': data.errorSummary.constraintViolations,
                'Data Type Errors': data.errorSummary.dataTypeErrors,
                'Other Errors': data.errorSummary.otherErrors
              });
            }
            
            // Show first 10 errors in detail
            console.error('üìã First 10 Errors:');
            data.errors.slice(0, 10).forEach((err, idx) => {
              console.error(`\n${idx + 1}. Row ${err.row}:`, {
                Error: err.error,
                DuplicateKey: err.duplicateKey || 'N/A',
                Data: err.data
              });
            });
            
            if (data.errors.length > 10) {
              console.error(`\n... ‡πÅ‡∏•‡∏∞‡∏≠‡∏µ‡∏Å ${data.errors.length - 10} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£ (‡∏î‡∏π‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÉ‡∏ô window.lastImportErrors)`);
            }
            
            // Show table format
            console.error('üìã Error Details (Table Format):');
            console.table(data.errors.map(err => ({
              Row: err.row,
              Error: err.error,
              DuplicateKey: err.duplicateKey || '-',
              'Sample Data': err.data ? Object.keys(err.data).slice(0, 3).map(k => `${k}:${err.data[k]}`).join(', ') : '-'
            })));
            
            // Show full JSON
            console.error('üìù Full Error Details (JSON):');
            console.error(JSON.stringify(data.errors, null, 2));
            
            // Instructions
            console.error('üí° To view errors again, type in console:');
            console.error('   - window.lastImportErrors (all errors)');
            console.error('   - window.lastErrorSummary (summary)');
            console.error('   - window.lastImportResult (full result)');
            console.error('   - viewImportErrors() (re-display)');
            console.error('   - localStorage.getItem("lastImportErrors") (from storage)');
            console.error('üö® ===== END OF IMPORT ERRORS =====');
          }
          
          // Show alert with appropriate type
          const alertType = data.inserted > 0 ? 'success' : 'warning';
          const alertId = showAlert(alertType, message, data.errors && data.errors.length > 0);
          
          // Add button to open console if there are errors
          if (data.errors && data.errors.length > 0) {
            setTimeout(() => {
              const alertDiv = document.querySelector(`[data-alert-id="${alertId}"]`);
              if (alertDiv) {
                const messageDiv = alertDiv.querySelector('div');
                if (messageDiv) {
                  const consoleBtn = document.createElement('button');
                  consoleBtn.className = 'btn btn-sm btn-outline-info ms-2 mt-2';
                  consoleBtn.innerHTML = '<i class="bi bi-terminal me-1"></i>‡πÄ‡∏õ‡∏¥‡∏î Console (F12)';
                  consoleBtn.onclick = () => {
                    alert('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏î F12 ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏¥‡∏î Developer Console\n\n‡∏à‡∏≤‡∏Å‡∏ô‡∏±‡πâ‡∏ô‡∏û‡∏¥‡∏°‡∏û‡πå:\n- window.lastImportErrors (‡∏î‡∏π errors ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î)\n- window.lastErrorSummary (‡∏î‡∏π‡∏™‡∏£‡∏∏‡∏õ)\n- window.lastImportResult (‡∏î‡∏π‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå)');
                  };
                  messageDiv.appendChild(document.createElement('br'));
                  messageDiv.appendChild(consoleBtn);
                }
              }
            }, 100);
          }
          
          // Close modal and reload page
          const modal = bootstrap.Modal.getInstance(document.getElementById('importModal'));
          modal.hide();
          
          setTimeout(() => {
