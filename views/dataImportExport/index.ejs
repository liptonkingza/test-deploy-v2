        })));
        console.error('Full JSON:', JSON.stringify(errors, null, 2));
        console.error('üö® ===== END OF IMPORT ERRORS =====');
      } else {
        console.warn('‚ö†Ô∏è No import errors found in memory or storage. Please run import again.');
        console.warn('If you just imported, check the console output above.');
      }
    }
    
    // Make function globally available
    window.viewImportErrors = viewImportErrors;
    
