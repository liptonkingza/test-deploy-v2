      html += '<table class="table table-sm table-hover">';
      html += '<thead class="table-light sticky-top"><tr><th>‡πÅ‡∏ñ‡∏ß</th><th>‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</th><th>‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•</th></tr></thead>';
      html += '<tbody>';
      
      errors.forEach((err, idx) => {
