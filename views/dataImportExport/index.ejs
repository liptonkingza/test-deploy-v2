  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentTableName = '';
    let currentTableLabel = '';

    // Export function
    function exportTable(tableName, tableLabel) {
      const url = `/data-import-export/export/${tableName}`;
      const link = document.createElement('a');
      link.href = url;
      link.download = `${tableName}_${new Date().toISOString().split('T')[0]}.csv`;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      // Show success message
      showAlert('success', `‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≤‡∏Å‡∏ï‡∏≤‡∏£‡∏≤‡∏á "${tableLabel}"`);
    }

    // Open import modal
    function openImportModal(tableName, tableLabel) {
      currentTableName = tableName;
      currentTableLabel = tableLabel;
      document.getElementById('importTableName').textContent = tableLabel;
      document.getElementById('importTableNameInput').value = tableName;
      document.getElementById('csvFileInput').value = '';
      document.getElementById('fileName').textContent = '';
      document.getElementById('importProgress').classList.add('d-none');
      
      const modal = new bootstrap.Modal(document.getElementById('importModal'));
      modal.show();
    }

    // File input handling
    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('csvFileInput');
    const fileName = document.getElementById('fileName');

    uploadArea.addEventListener('click', () => fileInput.click());

    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      const files = e.dataTransfer.files;
      if (files.length > 0 && files[0].name.endsWith('.csv')) {
        fileInput.files = files;
        fileName.textContent = `üìÑ ${files[0].name} (${(files[0].size / 1024).toFixed(2)} KB)`;
      } else {
        showAlert('danger', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå CSV ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô');
      }
    });

    fileInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        fileName.textContent = `üìÑ ${file.name} (${(file.size / 1024).toFixed(2)} KB)`;
      }
    });

    // Submit import
    function submitImport() {
      const fileInput = document.getElementById('csvFileInput');
      
      if (!fileInput.files[0]) {
        showAlert('danger', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå CSV');
        return;
      }

      // Create FormData manually to avoid unexpected fields
      const formData = new FormData();
      formData.append('csvFile', fileInput.files[0]);
      formData.append('mode', document.querySelector('input[name="mode"]:checked').value);

      const progressDiv = document.getElementById('importProgress');
      progressDiv.classList.remove('d-none');

      fetch(`/data-import-export/import/${currentTableName}`, {
        method: 'POST',
        body: formData
      })
      .then(async response => {
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          const text = await response.text();
          throw new Error(`Server error: ${response.status} ${response.statusText}. ${text.substring(0, 200)}`);
        }
        return response.json();
      })
      .then(data => {
        progressDiv.classList.add('d-none');
        
        if (data.success) {
          let message = `‡∏ô‡∏≥‡πÄ‡∏Ç‡πâ‡∏≤‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ${data.inserted} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏à‡∏≤‡∏Å ${data.total} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£`;
          
          if (data.skipped > 0) {
            message += ` (‡∏Ç‡πâ‡∏≤‡∏° ${data.skipped} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ã‡πâ‡∏≥)`;
          }
          
          if (data.errors && data.errors.length > 0) {
            message += ` (‡∏°‡∏µ ${data.errorCount} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î)`;
            
            // Show detailed errors in console
            console.group('üìã Import Errors Details');
            console.error('Total errors:', data.errorCount);
            console.table(data.errors);
            console.groupEnd();
            
            // Store errors for modal display
            window.lastImportErrors = data.errors;
            window.lastErrorSummary = data.errorSummary;
          }
          
          // Show alert with appropriate type
          const alertType = data.inserted > 0 ? 'success' : 'warning';
          const alertId = showAlert(alertType, message, data.errors && data.errors.length > 0);
          
          // Add button to view error details if there are errors
          if (data.errors && data.errors.length > 0) {
            setTimeout(() => {
              const alertDiv = document.querySelector(`[data-alert-id="${alertId}"]`);
              if (alertDiv) {
                const messageDiv = alertDiv.querySelector('div');
                if (messageDiv) {
                  const viewDetailsBtn = document.createElement('button');
                  viewDetailsBtn.className = 'btn btn-sm btn-outline-dark ms-2 mt-2';
                  viewDetailsBtn.innerHTML = '<i class="bi bi-eye me-1"></i>‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î';
                  viewDetailsBtn.onclick = () => showErrorDetailsModal(data.errors, data.errorSummary);
                  messageDiv.appendChild(document.createElement('br'));
                  messageDiv.appendChild(viewDetailsBtn);
                }
              }
            }, 100);
          }
          
          // Close modal and reload page
          const modal = bootstrap.Modal.getInstance(document.getElementById('importModal'));
          modal.hide();
          
          setTimeout(() => {
            location.reload();
          }, 2000);
        } else {
          const errorMsg = data.error || data.message || '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏™‡∏≤‡πÄ‡∏´‡∏ï‡∏∏';
          const details = data.details ? `\n‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î: ${data.details}` : '';
          showAlert('danger', `‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ${errorMsg}${details}`);
        }
      })
      .catch(error => {
        progressDiv.classList.add('d-none');
        console.error('Import error:', error);
        const errorMsg = error.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå';
        showAlert('danger', errorMsg);
      });
    }

    // Store alert timeouts
    const alertTimeouts = {};
    
    // Show alert
    function showAlert(type, message, hasErrors = false) {
      const alertId = 'alert-' + Date.now();
      const alertDiv = document.createElement('div');
      alertDiv.setAttribute('data-alert-id', alertId);
      alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
      alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; max-width: 600px; white-space: pre-line;';
      
      // Format message with line breaks
      const formattedMessage = message.replace(/\n/g, '<br>');
      
      const messageDiv = document.createElement('div');
      messageDiv.innerHTML = formattedMessage;
      alertDiv.appendChild(messageDiv);
      
      const closeBtn = document.createElement('button');
      closeBtn.type = 'button';
      closeBtn.className = 'btn-close';
      closeBtn.setAttribute('data-bs-dismiss', 'alert');
      closeBtn.onclick = () => {
        // Clear timeout when manually closed
        if (alertTimeouts[alertId]) {
          clearTimeout(alertTimeouts[alertId]);
          delete alertTimeouts[alertId];
        }
      };
      alertDiv.appendChild(closeBtn);
      
      document.body.appendChild(alertDiv);
      
      // Keep alert longer if there are errors, but don't auto-close if user might want to see details
      const timeout = hasErrors ? 30000 : 5000; // 30 seconds for errors, 5 seconds for success
      alertTimeouts[alertId] = setTimeout(() => {
        if (alertDiv.parentNode) {
          alertDiv.remove();
        }
        delete alertTimeouts[alertId];
      }, timeout);
      
      return alertId;
    }
    
    // Function to cancel alert timeout
    function cancelAlertTimeout(alertId) {
      if (alertTimeouts[alertId]) {
        clearTimeout(alertTimeouts[alertId]);
        delete alertTimeouts[alertId];
      }
    }
    
    // Show error details modal
    function showErrorDetailsModal(errors, errorSummary) {
      // Cancel any alert timeouts to prevent alerts from disappearing
      Object.keys(alertTimeouts).forEach(alertId => {
        cancelAlertTimeout(alertId);
      });
      
      const modalContent = document.getElementById('errorDetailsContent');
      let html = '';
      
      // Error Summary
      if (errorSummary) {
        html += '<div class="mb-4">';
        html += '<h6><i class="bi bi-bar-chart me-2"></i>‡∏™‡∏£‡∏∏‡∏õ‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</h6>';
        html += '<div class="row g-3">';
        if (errorSummary.duplicateKeys > 0) {
