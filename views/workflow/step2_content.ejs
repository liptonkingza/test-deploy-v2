    nextBtn?.addEventListener('click', async () => {
      // ตรวจสอบว่ามีการแก้ไขฟอร์มที่ยังไม่ได้บันทึกหรือไม่
      if (hasFormChanged()) {
        // บันทึกอัตโนมัติก่อนไปขั้นตอนถัดไป
        if (!form || !submitBtn) {
          alert('ไม่สามารถบันทึกข้อมูลได้');
          return;
        }
        
        // แสดงสถานะกำลังบันทึก
        const originalNextText = nextBtn.textContent;
        nextBtn.textContent = 'กำลังบันทึก...';
        nextBtn.setAttribute('disabled', 'disabled');
        submitBtn.setAttribute('disabled', 'disabled');
        
        try {
          // Handle combined address field - split into addr2 and addr3
          const addressCombinedField = form.querySelector('[name="address_combined"]');
          const addr2Field = form.querySelector('[name="addr2"]');
          const addr3Field = form.querySelector('[name="addr3"]');
          
          if (addressCombinedField && addr2Field && addr3Field) {
            const combinedAddress = addressCombinedField.value.trim();
            const lines = combinedAddress.split('\n');
            addr2Field.value = lines[0] || '';
            addr3Field.value = lines[1] || '';
          }

          const formData = new FormData(form);
          const payload = {};
          Array.from(form.elements).forEach((el) => {
            if (!(el instanceof HTMLInputElement || el instanceof HTMLTextAreaElement || el instanceof HTMLSelectElement)) return;
            const name = el.name;
            if (!name || name === 'id' || name === 'address_combined') return;
            const value = formData.get(name);
            if (value == null) return;
            const trimmed = typeof value === 'string' ? value.trim() : value;
            payload[name] = trimmed === '' ? null : trimmed;
          });

          if (!payload.deliverto || !payload.appttel) {
            alert('กรุณากรอกข้อมูลผู้รับ และเบอร์ติดต่อ');
            nextBtn.textContent = originalNextText;
            nextBtn.removeAttribute('disabled');
            submitBtn.removeAttribute('disabled');
            return;
          }

          const draftId = state.editingId || `draft-${Date.now()}`;
          const draft = {
            ...payload,
            id: draftId,
            isDraft: true,
            day: payload.day || new Date().toISOString().slice(0, 10),
            timein: payload.timein || new Date().toTimeString().slice(0, 5),
            sourceId: state.editingSourceId || null,
          };

          const existingIndex = state.drafts.findIndex((d) => String(d.id) === String(draftId));
          if (existingIndex >= 0) {
            state.drafts[existingIndex] = draft;
          } else {
            state.drafts.unshift(draft);
          }
          state.deliveryDraftId = draft.id;
          state.selectedId = draft.id;
          
          // Update form state after save
          state.originalFormData = captureFormState();
          
          // Show success feedback briefly
          if (feedback) {
            feedback.classList.remove('d-none');
            feedback.textContent = '✓ บันทึกข้อมูลอัตโนมัติแล้ว กำลังไปขั้นตอนถัดไป...';
          }
          
          // Proceed to next step after brief delay
          await new Promise(resolve => setTimeout(resolve, 500));
          
        } catch (err) {
          alert('เกิดข้อผิดพลาดในการบันทึกข้อมูล: ' + (err.message || ''));
          nextBtn.textContent = originalNextText;
          nextBtn.removeAttribute('disabled');
          submitBtn.removeAttribute('disabled');
          return;
        }
      }
      
      if (!state.selectedId) {
        alert('กรุณาเลือกรายการจัดส่ง');
        return;
      }
      const selection = getCombinedList().find((d) => String(d.id) === String(state.selectedId));
      if (!selection) {
        alert('ไม่พบข้อมูลจัดส่งที่เลือก');
        return;
      }
      persistSelectedDeliverySelection(selection);
      sessionStorage.removeItem(storageKeyMediaSelection);
      const nextUrl = '/workflow/step3?customerId=' + encodeURIComponent(customerId);
      window.location.href = nextUrl;
    });

    form?.addEventListener('submit', (event) => {
      event.preventDefault();
